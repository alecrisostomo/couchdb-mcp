{
  "name": "couchdb-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "couchdb-mcp": "./build/main.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npx tsc && chmod +x build/main.js",
    "prepare": "npm run build",
    "watch": "npx tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/main.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "dotenv": "^16.4.7",
    "nano": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/ui": "^2.1.9",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
